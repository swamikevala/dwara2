<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property name="LOGS" value="logs" />

	<appender name="RollingFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOGS}/spring-boot-logger.log</file>
		<encoder
			class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
		</encoder>

		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily and when the file reaches 10 MegaBytes -->
			<fileNamePattern>${LOGS}/archived/spring-boot-logger-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
	</appender>

	<!-- LOG everything at INFO level -->
	<root level="info">
		<appender-ref ref="RollingFile" />
	</root>

	<logger name="org.ishafoundation" level="trace"
		additivity="false">
		<appender-ref ref="RollingFile" />
	</logger>

	<logger name="org.ishafoundation.dwaraapi.scheduler"
		level="info" additivity="false">
		<appender-ref ref="RollingFile" />
	</logger>

	<logger name="org.ishafoundation.dwaraapi.resource"
		level="info" additivity="false">
		<appender-ref ref="RollingFile" />
	</logger>
	
	<logger name="org.ishafoundation.dwaraapi.service"
		level="info" additivity="false">
		<appender-ref ref="RollingFile" />
	</logger>
	
	<logger name="org.ishafoundation.dwaraapi.job" level="info"
		additivity="false">
		<appender-ref ref="RollingFile" />
	</logger>

	<logger name="org.ishafoundation.dwaraapi.process" level="info"
		additivity="false">
		<appender-ref ref="RollingFile" />
	</logger>

	<logger name="org.ishafoundation.dwaraapi.storage" level="info"
		additivity="false">
		<appender-ref ref="RollingFile" />
	</logger>

	<logger name="org.ishafoundation.dwaraapi.commandline"
		level="OFF">
		<appender-ref ref="RollingFile" />
	</logger>

	<logger name="org.ishafoundation.videopub" level="info"
		additivity="false">
		<appender-ref ref="RollingFile" />
	</logger>

</configuration>